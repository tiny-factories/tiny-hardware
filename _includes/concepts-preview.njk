<div reversed class="fl w-100" style="counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }}">
{% for post in postslist | reverse %}

  <article class="fl br2 ba dark-gray b--black-10 mv4 w-100 w-50-m w-25-l mw5">
    <a href="{{ post.url | url }}" class="">
      <img src="http://placekitten.com/g/600/300" class="db w-100 br2 br--top" alt="Photo of a kitten looking menacing.">
      <div class="pa2 ph3-ns pb3-ns">
        <div class="dt w-100 mt1">
          <div class="dtc">
            <h1 class="mv0">{{ post.data.title }}</h1>
          </div>
        </div>
        <p class="lh-copy measure mt2 mid-gray">
          {{ post.data.description }}
        </p>
      </div>
    </a>
  </article>
{% endfor %}
</div>